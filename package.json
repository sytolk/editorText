{
  "name": "@tagspaces/text-editor-component",
  "version": "1.0.0",
  "description": "A TagSpaces extension allowing editing of text based documents.",
  "homepage": "https://www.tagspaces.org",
  "author": {
    "name": "TagSpaces UG",
    "email": "info@tagspaces.org",
    "url": "https://www.tagspaces.org"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "parcel index.html --open",
    "prebuild-dev": "shx rm -rf dist/*",
    "build-dev": "parcel build ./src/index.js --no-minify --public-url ./",
    "build": "parcel build --public-url . index.html",
    "build-lib": "parcel build --public-url ./ ./src/index.js",
    "push-ts-component": "yarn prebuild-dev && yarn build-lib && push-dir --dir=dist --branch=ts-component --cleanup --verbose --allow-unclean",
    "push-ts-pages": "yarn prebuild-dev && yarn build && push-dir --dir=dist --branch=ts-pages --cleanup --verbose --allow-unclean"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.4.4",
    "codemirror": "^5.56.0",
    "hybrids": "4.3.0",
    "react": "^16.13.1",
    "react-codemirror2": "^7.2.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "shx": "^0.3.2"
  }
}
